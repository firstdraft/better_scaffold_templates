<%%= form_for(<%= singular_table_name %>) do |f| %>
<% attributes.each do |attribute| -%>
  <div class="form-group row <%%= "has-danger" if <%= singular_table_name %>.errors.include?(:<%= attribute.name %>) %>">
    <%%= f.label :<%= attribute.name %>, class: "col-md-2 control-label" %>
    <div class="col-md-10">
      <%%= f.<%= attribute.field_type %> :<%= attribute.name %>, class: "form-control" %>

      <%% if <%= singular_table_name %>.errors.include?(:<%= attribute.name %>) %>
        <%% <%= singular_table_name %>.errors.full_messages_for(:<%= attribute.name %>).each do |message| %>
          <p class="text-danger m-t-1 m-b-0">
            <%%= message %>
          </p>
        <%% end %>
      <%% end %>
    </div>
  </div>

<% end -%>
  <div class="form-group row">
    <div class="col-md-offset-2 col-md-10">
      <%%= f.button class: "btn btn-primary btn-block" %>

      <%%= link_to "Cancel", :back, class: "btn btn-link btn-block" %>
    </div>
  </div>
<%% end %>
